<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.androidtown.multimemo.stage05"
    android:versionCode="11"
    android:versionName="1.5.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.androidtown.multimemo.stage05.MultiMemoActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
		<activity
			android:name=".stage05.MemoInsertActivity"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="portrait"
			>
        </activity>

        <activity
			android:name=".stage05.PhotoCaptureActivity"
			android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="landscape"
			>
        </activity>

        <activity
			android:name=".stage05.PhotoSelectionActivity"
			android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="portrait"
			>
        </activity>

		<activity
			android:name=".stage05.HandwritingMakingActivity"
			android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="landscape"
			>
        </activity>
        <activity
			android:name=".stage05.PenPaletteDialog"
			android:theme="@android:style/Theme.Dialog"
			android:screenOrientation="landscape"
			>
        </activity>
        <activity
			android:name=".stage05.ColorPaletteDialog"
			android:theme="@android:style/Theme.Dialog"
			android:screenOrientation="landscape"
			>
        </activity>

        <activity
			android:name=".stage05.VideoRecordingActivity"
			android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="landscape"
			>
        </activity>
        <activity
			android:name=".stage05.VideoPlayActivity"
			android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="landscape"
			>
        </activity>
        <activity
			android:name=".stage05.VideoSelectionActivity"
			android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="portrait"
			>
        </activity>
        <activity
			android:name=".stage05.VoiceRecordingActivity"
			android:theme="@android:style/Theme.Dialog"
			android:screenOrientation="portrait"
			>
        </activity>
        <activity
			android:name=".stage05.VoicePlayActivity"
			android:theme="@android:style/Theme.Dialog"
			android:screenOrientation="portrait"
			>
        </activity>
        
    </application>

</manifest>
